<?xml version="1.0" encoding="utf-8"?>

	<TableLayout	
		xmlns:android="http://schemas.android.com/apk/res/android" 
	   	android:layout_width="fill_parent" 
	   	android:layout_height="fill_parent"
	   	android:stretchColumns="1">
	   	<TableRow>
		   	<!-- Platform information -->
		   	<TextView
				xmlns:android="http://schemas.android.com/apk/res/android"
				android:id="@+id/detailsPlatformText"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:text="Platform: " />
			<TextView
				xmlns:android="http://schemas.android.com/apk/res/android"
				android:id="@+id/detailsPlatformInfo"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:textSize="18sp"/>
	   	</TableRow>
	   	<TableRow>
		   	<!--  Departure info -->
			<TextView
				xmlns:android="http://schemas.android.com/apk/res/android"
				android:id="@+id/detailsDepartText"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"/>
			<TextView
				xmlns:android="http://schemas.android.com/apk/res/android"
				android:id="@+id/detailsDepartInfo"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:textSize="18sp"/>
	   	</TableRow>
	   	<TableRow>
		   	<!--  arrival info -->
			<TextView
				xmlns:android="http://schemas.android.com/apk/res/android"
				android:id="@+id/detailsDestText"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"/>
			
			<TextView
				xmlns:android="http://schemas.android.com/apk/res/android"
				android:id="@+id/detailsDestInfo"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:textSize="18sp"/>	
	   	</TableRow>   	
	</TableLayout>





	